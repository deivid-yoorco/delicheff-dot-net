@model IList<ProductOverviewModel>

@if (Model.Count > 0)
{
    <style>
        @@media (max-width: 600px) {
            .section > .row {
                margin: -3%;
            }
        }
    </style>
    <div class="section">
        <h4>@T("Bestsellers")</h4>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col s6 m6 l3" style="margin-bottom:2%;">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}