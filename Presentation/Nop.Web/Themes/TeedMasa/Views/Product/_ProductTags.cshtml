@model IList<ProductTagModel>
@if (Model.Count > 0)
{
    <div class="product-tags-box">
        <div class="title" style="margin-top:1%;margin-bottom:1%;">
            <strong>@T("Products.Tags")</strong>
        </div>
        <style>
            .btn-small {
                height: 32.4px;
                line-height: 32.4px;
                font-size: 13px;
                margin-bottom: 1%;
            }
        </style>
        <div class="product-tags-list">
            @*<ul>*@
                @for (var i = 0; i < Model.Count; i++)
                {
                    @*<li class="tag">*@
                        <a href="@Url.RouteUrl("ProductsByTag", new { productTagId = Model[i].Id, SeName = Model[i].SeName })" class="producttag btn-small">
                            @Model[i].Name @T("Products.Tags.Count", Model[i].ProductCount)</a> 
                    @*</li>*@
                    @*if (i != Model.Count - 1)
                    {
                    <li class="separator">,</li>
                    }*@
                }
            @*</ul>*@
        </div>
    </div>
}