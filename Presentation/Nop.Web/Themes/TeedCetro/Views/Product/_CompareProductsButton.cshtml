@model ProductDetailsModel
@{
    var addtocomparelink = Url.RouteUrl("AddProductToCompare", new { productId = Model.Id });
}
@if (Model.CompareProductsEnabled)
{
    <button type="button" title="@T("Products.Compare.AddToCompareList")" class="btn-floating waves-effect waves-light" onclick="AjaxCart.addproducttocomparelist('@addtocomparelink');return false;">
        <i class="material-icons">compare</i>
    </button>
}