@model IList<ProductOverviewModel>

@if (Model.Count > 0)
{
    <div class="section margin-mobile">
        <h5>@T("Products.RelatedProducts")</h5>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col s6 m6 l3">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}