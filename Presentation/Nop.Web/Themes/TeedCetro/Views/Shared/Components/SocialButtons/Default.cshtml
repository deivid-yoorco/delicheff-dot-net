@model SocialModel
@{ 
    var att = "@";
}

@if (!string.IsNullOrEmpty(Model.FacebookLink))
{
    <a class="btn-floating waves-effect waves-light btn-social facebook" href="@Model.FacebookLink" target="_blank" title="@T("Footer.FollowUs.Facebook")" style="background-color: transparent!important;">
        <i class="fab fa-facebook-f"></i>
    </a>
}
@if (!string.IsNullOrEmpty(Model.TwitterLink))
{
    <a class="btn-floating waves-effect waves-light btn-social twitter" href="@Model.TwitterLink" target="_blank" title="@T("Footer.FollowUs.Twitter")" style="background-color: transparent!important;">
        <i class="fab fa-twitter"></i>
    </a>
}
@if (Model.NewsEnabled)
{
    <a class="btn-floating waves-effect waves-light btn-social rss" href="@Url.RouteUrl("NewsRSS", new {languageId = Model.WorkingLanguageId})" target="_blank" title="@T("Footer.FollowUs.RSS")" style="background-color: transparent!important;">
        <i class="fas fa-rss"></i>
    </a>
}
@if (!string.IsNullOrEmpty(Model.YoutubeLink))
{
    <a class="btn-floating waves-effect waves-light btn-social youtube" href="@Model.YoutubeLink" target="_blank" title="@T("Footer.FollowUs.Youtube")" style="background-color: transparent!important;">
        <i class="fab fa-youtube"></i>
    </a>
}
@if (!string.IsNullOrEmpty(Model.GooglePlusLink))
{
    <a class="btn-floating waves-effect waves-light btn-social googleplus" href="@Model.GooglePlusLink" target="_blank" title="@T("Footer.FollowUs.GooglePlus")" style="background-color: transparent!important;">
        <i class="fab fa-google-plus-g"></i>
    </a>
}
@if (!string.IsNullOrEmpty(Model.InstagramLink))
{
    <a class="btn-floating waves-effect waves-light btn-social instagram" href="@Model.InstagramLink" target="_blank" title="@T("Footer.FollowUs.Instagram")" style="background-color: transparent!important;">
        <i class="fab fa-instagram"></i>
    </a>
}
<a class="btn-floating waves-effect waves-light btn-social tiktok" href="https://www.tiktok.com/@(att)cetromexico" target="_blank" title="TikTok" style="background-color: transparent!important;">
    <img src="/images/icons/TT.png" />
</a>
