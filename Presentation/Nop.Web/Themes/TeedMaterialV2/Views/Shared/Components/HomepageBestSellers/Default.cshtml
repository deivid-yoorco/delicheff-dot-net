@model IList<ProductOverviewModel>

@if (Model.Count > 0)
{
    <div class="section">
        <h4>@T("Bestsellers")</h4>

        <div class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                Model[i].ListName = "Productos destacados";
                Model[i].ListPosition = i;
                <div class="col s6 m6 l3" style="margin-bottom:2%;">
                    @await Html.PartialAsync("_ProductBox", Model[i])
                </div>
            }
        </div>
    </div>
}