@model LogoModel
<div class="show-on-medium-and-down hide-on-med-and-up">
    <ul class="left mobile-bar" style="height: 30px;">
        @await Component.InvokeAsync("HeaderLinks", new { HideExtra = true })
    </ul>
</div>
<div class="show-on-medium-and-down hide-on-med-and-up">
    <a id="logo-container" href="/" class="brand-logo">
        @*<img title="" alt="@Model.StoreName" src="@Model.LogoPath" />*@
        <img title="" alt="@Model.StoreName" src="https://www.lamyshop.com.mx/Themes/TeedLamy/Content/images/brand_logo.svg" id="logo-image" />
    </a>
</div>
<div class="row hide-on-med-and-down logo-banner" style="margin-bottom:0;display:flex;align-items:center;">
    <div id="res1" class="col m6 lamy-resize">
        <a id="logo-container" href="/" class="brand-logo" style="vertical-align:middle; position:relative;">
            @*<img title="" alt="@Model.StoreName" src="@Model.LogoPath" id="logo-image" />*@
            <img title="" alt="@Model.StoreName" src="https://www.lamyshop.com.mx/Themes/TeedLamy/Content/images/brand_logo.svg" id="logo-image" />
        </a>
    </div>
    <div id="res2" class="col m6 lamy-resize">
        <ul class="left">
            @await Component.InvokeAsync("TaxTypeSelector")
            @await Component.InvokeAsync("CurrencySelector")
            @await Component.InvokeAsync("LanguageSelector")
            @await Component.InvokeAsync("Widget", new { widgetZone = "header_selectors" })
        </ul>
        <ul class="right">
            @await Component.InvokeAsync("HeaderLinks")
        </ul>
    </div>
</div>
