@model IList<ProductOverviewModel>

@if (Model.Count > 0)
{
    <div class="section margin-mobile">
        <h5>@T("Products.RelatedProducts")</h5>

        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col s6 m12 l12">
                <div class="product-footer-bar"></div>
                @await Html.PartialAsync("_ProductRelated", item)
            </div>
            }
        </div>
    </div>
}