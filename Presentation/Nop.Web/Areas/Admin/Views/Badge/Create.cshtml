@model Nop.Web.Areas.Admin.Models.Rewards.BadgeModel

@{
    //page title
    ViewBag.Title = "Agregar insignia";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Badges");
}

<form asp-controller="Badge" asp-action="Create" method="post" id="badge-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Agregar insignia
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">regresar a la lista de insignias</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>