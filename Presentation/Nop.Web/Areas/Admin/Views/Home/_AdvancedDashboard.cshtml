        $("#change-price").kendoGrid({
        dataSource: {
            type: "json",
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("PriceChanges", "Dash"))",
                        type: "POST",
                        dataType: "json",
                        data: addAntiForgeryToken
                    }
                },
            schema: {
                data: "Data",
                total: "Total",
                errors: "Errors"
            },
