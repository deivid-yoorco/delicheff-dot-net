@model Teed.Plugin.Payments.PagoFacil.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="PaymentPagoFacil" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                Ingresa la información solicitada<br /><br />
                <div class="form-group">
                    <div class="col-md-3 text-right">
                        <nop-override-store-checkbox asp-for="IdSucursal_OverrideForStore" asp-input="IdSucursal" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <label>Id de sucursal</label>
                    </div>
                    <div class="col-md-9">
                        <input asp-for="IdSucursal" maxlength="256" class="form-control" />
                        <span asp-validation-for="IdSucursal" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 text-right">
                        <nop-override-store-checkbox asp-for="IdUsuario_OverrideForStore" asp-input="IdUsuario" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <label>Id de usuario</label>
                    </div>
                    <div class="col-md-9">
                        <input asp-for="IdUsuario" maxlength="256" class="form-control" />
                        <span asp-validation-for="IdUsuario" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 text-right">
                        <nop-override-store-checkbox asp-for="IdServicio_OverrideForStore" asp-input="IdServicio" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <label>Id de servicio</label>
                    </div>
                    <div class="col-md-9">
                        <input asp-for="IdServicio" type="number" class="form-control" />
                        <span asp-validation-for="IdServicio" class="text-danger"></span>
                    </div>
                </div>                
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>