                    <div class="col-md-9">
                        <nop-editor asp-for="Allow12Msi" />
                        <span asp-validation-for="Allow12Msi"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 text-right">
                        <nop-override-store-checkbox asp-for="Allow18Msi_OverrideForStore" asp-input="Allow18Msi" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <label>Permitir pagar a 18 meses sin intereses</label>
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Allow18Msi" />
                        <span asp-validation-for="Allow18Msi"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 text-right">
                        <nop-override-store-checkbox asp-for="MinimumMsiAmount_OverrideForStore" asp-input="MinimumMsiAmount" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <label>Monto mínimo de compra para poder utilizar MSI (dejar en 0 si no hay monto mínimo)</label>
                    </div>
                    <div class="col-md-9">
                        <input asp-for="MinimumMsiAmount" type="number" class="form-control" />
                        <span asp-validation-for="MinimumMsiAmount" class="text-danger"></span>
                    </div>
                </div>
