@model Teed.Plugin.Medical.Models.Holiday.DetailsViewModel
@using Nop.Services.Common;
@using Nop.Core.Domain.Customers;
@{
    Layout = "_AdminLayout";
    Html.SetActiveMenuItemSystemName("TeedBranches.Holidays");
}

<form asp-controller="Plugin" asp-action="List" method="post" id="plugins-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Información del feriado
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">regresar a la lista de feriados</a>
            </small>
        </h1>
        <div class="pull-right">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn bg-blue">
                <i class="fa fa-pencil"></i>
                @T("Admin.Common.Edit")
            </a>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default panel-search">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-9 col-md-offset-3">
                                <p><strong>Fecha:</strong> @Model.HolidayDate.ToString("dd MMMM")</p>
                                <p><strong>Nombre del feriado:</strong> @Model.Name</p>
                                <h3>Sucursales en las que aplica:</h3>
                                <ul>
                                    @foreach (var item in Model.Branches)
                                    {
                                        <li>@item.Name</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>