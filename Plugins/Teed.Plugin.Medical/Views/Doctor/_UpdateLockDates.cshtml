@model Teed.Plugin.Medical.Models.Doctors.DoctorsModel
@{
    Html.SetActiveMenuItemSystemName("TeedMedical.Settings");
    string controllerName = "Doctor";
}

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div id="LockDates-grid"></div>
            <script type="text/javascript">
                        $(document).ready(function () {
                            $("#LockDates-grid").kendoGrid({
                                dataSource: {
                                    type: "json",
                                    transport: {
                                        read: {
                                            url: "@Html.Raw(Url.Action("ListLockDate", controllerName, new {id = Model.Id}))",
                                            type: "POST",
                                            dataType: "json",
                                            data: addAntiForgeryToken
                                        },
                                        update: {
                                            url: "@Html.Raw(Url.Action("UpdateLockDate", controllerName))",
                                            type: "POST",
                                            dataType: "json",
                                            data: addAntiForgeryToken
                                        },
                                        destroy: {
                                            url: "@Html.Raw(Url.Action("DeleteLockDate", controllerName))",
                                            type: "POST",
                                            dataType: "json",
                                            data: addAntiForgeryToken
                                        }
                                    },
                                    schema: {
                                        data: "Data",
                                        total: "Total",
                                        errors: "Errors",
                                        model: {
                                            id: "Id",
                                            fields: {
                                                EndDate: { editable: false, type: "string" },
                                                InitDate: { editable: false, type: "string" }                                               
                                            }
                                        }
                                    },
                                    requestEnd: function(e) {
                                        if (e.type == "update") {
                                            this.read();
                                        }
                                    },
                                    error: function(e) {
                                        display_kendoui_grid_error(e);
                                        // Cancel the changes
                                        this.cancelChanges();
                                    },
                                    serverPaging: true,
                                    serverFiltering: true,
                                    serverSorting: true
                                },
                                pageable: {
                                    refresh: true,
                                    numeric: false,
                                    previousNext: false,
                                    info: false,
                                    @*@await Html.PartialAsync("_GridPagerMessages")*@
                                },
                                editable: {
                                    //confirmation: "@T("Admin.Common.DeleteConfirmation")",
                                    confirmation: false,
                                    mode: "inline"
                                },
                                scrollable: false,
                                columns: [                                    
                                    {
                                        field: "InitDate",
                                        title: "Fecha Inicio",
                                        width: 100,
                                        attributes: { class: "text-center" }
                                    },
                                    {
                                        field: "EndDate",
                                        title: "Fecha Fin",
                                        width: 100,
                                        attributes: { class: "text-center" }
                                        
                                    },                                   
                                    {
                                        command: [
                                            {
                                                name: "destroy",
                                                text: "@T("Admin.Common.Delete")"
                                                
                                            }
                                        ],
                                        width: 100,
                                        attributes: { class: "text-center" }
                                    }
                                ]
                            });
                        });
            </script>

            @if (Model.LockDatesCount <= 0)
            {
                <div id="empty-message" class="panel panel-default">
                    <div class="panel-body">
                        No se han agregado horarios.
                    </div>
                </div>
            }
            <br />
            <div class="panel panel-default">
                <div class="panel-heading">
                    Agregar 
                </div>
                <div class="panel-body">
                    <div>                       
                        <div class="form-group">
                            <div class="col-md-3 text-right">
                                <label>Selecciona el rango de fechas:</label>
                            </div>
                            <div class="col-md-9">
                                <div id="jrange" class="dates">
                                    <input />
                                    <div></div>
                                </div>
                            </div>
                        </div>
                        <script>
                            $(document).ready(function () {

                                $.datepicker._defaults.onAfterUpdate = null;

                                var datepicker__updateDatepicker = $.datepicker._updateDatepicker;
                                $.datepicker._updateDatepicker = function (inst) {
                                    datepicker__updateDatepicker.call(this, inst);

                                    var onAfterUpdate = this._get(inst, 'onAfterUpdate');
                                    if (onAfterUpdate) onAfterUpdate.apply((inst.input ? inst.input[0] : null), [(inst.input ? inst.input.val() : ''), inst]);
                                }


                                $(function () {

                                    var cur = -1,
                                        prv = -1;
                                    $('#jrange div')
                                        .datepicker({
                                            //numberOfMonths: 3,
                                            changeMonth: true,
                                            changeYear: true,
                                            showButtonPanel: true,

                                            beforeShowDay: function (date) {
                                                return [true, ((date.getTime() >= Math.min(prv, cur) && date.getTime() <= Math.max(prv, cur)) ? 'date-range-selected' : '')];
                                            },

                                            onSelect: function (dateText, inst) {
                                                var d1, d2;

                                                prv = cur;
                                                cur = (new Date(inst.selectedYear, inst.selectedMonth, inst.selectedDay)).getTime();
                                                if (prv == -1 || prv == cur) {
                                                    prv = cur;
                                                    $('#jrange input').val(dateText);
                                                } else {
                                                    d1 = $.datepicker.formatDate('mm/dd/yy', new Date(Math.min(prv, cur)), {});
                                                    d2 = $.datepicker.formatDate('mm/dd/yy', new Date(Math.max(prv, cur)), {});
                                                    $('#jrange input').val(d1 + ' - ' + d2);
                                                }
                                            },

                                            onChangeMonthYear: function (year, month, inst) {
                                                //prv = cur = -1;
                                            },

                                            onAfterUpdate: function (inst) {
                                                $('<button type="button" class="ui-datepicker-close ui-state-default ui-priority-primary ui-corner-all" data-handler="hide" data-event="click" id="addProductSpec">Agregar</button>')
                                                    .appendTo($('#jrange div .ui-datepicker-buttonpane'))
                                                    .on('click', function () {
                                                        var dates = $('#jrange input').val();
                                                        var initDate = "";
                                                        var endDate = "";
                                                        if (dates.indexOf(' - ') > -1) {
                                                            var d = dates.split(' - ');
                                                            initDate = d[0];
                                                            endDate = d[1];


                                                        } else {
                                                            initDate = dates;
                                                            endDate = dates;
                                                        }
                                                        var postData = {
                                                            Id: @Model.Id,
                                                            InitDate: initDate,
                                                            EndDate: endDate
                                                        }
                                                        addAntiForgeryToken(postData);
                                                        $.ajax({
                                                            cache: false,
                                                            type: "POST",
                                                            url: "@(Url.Action("SaveLockDate", controllerName))",
                                                            data: postData,
                                                            success: function (data) {
                                                                var grid = $("#LockDates-grid").data('kendoGrid');
                                                                grid.dataSource.read();
                                                                $('#empty-message').hide();
                                                            },
                                                            error: function (xhr, ajaxOptions, thrownError) {
                                                                alert('Ocurrió un error al agregar las fechas.');

                                                            }
                                                        });

                                                        $('#jrange div').hide();
                                                    });
                                            }
                                        })
                                        .position({
                                            my: 'left top',
                                            at: 'left bottom',
                                            of: $('#jrange input')
                                        })
                                        .hide();

                                    $('#jrange input').on('focus', function (e) {
                                        var v = this.value,
                                            d;

                                        try {
                                            if (v.indexOf(' - ') > -1) {
                                                d = v.split(' - ');

                                                prv = $.datepicker.parseDate('mm/dd/yy', d[0]).getTime();
                                                cur = $.datepicker.parseDate('mm/dd/yy', d[1]).getTime();

                                            } else if (v.length > 0) {
                                                prv = cur = $.datepicker.parseDate('mm/dd/yy', v).getTime();
                                            }
                                        } catch (e) {
                                            cur = prv = -1;
                                        }

                                        if (cur > -1) $('#jrange div').datepicker('setDate', new Date(cur));

                                        $('#jrange div').datepicker('refresh').show();
                                    });

                                });
                            });
                        </script>
                        <style>
                            .date-range-selected > .ui-state-active, .date-range-selected > .ui-state-default {
                                background: none;
                                background-color: lightsteelblue;
                            }
                        </style>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>