                                {
                                    @if (i < 10)
                                    {
                                        <option value="@i">0@(i)</option>
                                    }
                                    else
                                    {
                                        <option value="@i">@i</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="WeekOpenHour" class="text-danger"></span>
                        </div>
