                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        if (document.getElementById("saturdayCheckbox").checked)
            $("#worksOnSaturday").show();
        else
            $("#worksOnSaturday").hide();

        if (document.getElementById("sundayCheckbox").checked)
            $("#worksOnSunday").show();
        else
            $("#worksOnSunday").hide();

        $("#saturdayCheckbox").change(function () {
            if (this.checked)
                $("#worksOnSaturday").show();
            else
                $("#worksOnSaturday").hide();
        });
        $("#sundayCheckbox").change(function () {
            if (this.checked)
                $("#worksOnSunday").show();
            else
                $("#worksOnSunday").hide();
        });
    });
</script>