@model Teed.Plugin.Api.Models.OnboardingModel


<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div style="margin-bottom:3%" asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            <div class="label-wrapper">
                                <label class="control-label">Nombre</label>
                                <div title="Nombre del Onboarding. El nombre es únicamente para que lo puedan identificar internamente." class="ico-help">
                                    <i class="fa fa-question-circle"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            <div class="label-wrapper">
                                <label class="control-label">Título</label>
                                <div title="Título que aparecerá en la pantalla junto con los demás elementos" class="ico-help">
                                    <i class="fa fa-question-circle"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            <div class="label-wrapper">
                                <label class="control-label">Subtítulo</label>
                                <div title="Subtítulo que aparecerá en la pantalla junto con los demás elementos" class="ico-help">
                                    <i class="fa fa-question-circle"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Subtitle" />
                            <span asp-validation-for="Subtitle" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            <div class="label-wrapper">
                                <label class="control-label">Color de fondo</label>
                                <div title="Color de fondo que se utilizará para el onboarding en hexadecimal. Ejemplo: #3c8dbc" class="ico-help">
                                    <i class="fa fa-question-circle"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="BackgroundColor" />
                            <span asp-validation-for="BackgroundColor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            <div class="label-wrapper">
                                <label class="control-label">Imagen</label>
                                <div title="Ingresa la imagen del pop up." class="ico-help">
                                    <i class="fa fa-question-circle"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="ImageId" />
                            <span asp-validation-for="ImageId" class="text-danger"></span>
                            <em>Tamaño recomendado: 1080x1920 en .JPG</em>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            <div class="label-wrapper">
                                <label class="control-label">Activo</label>
                                <div title="Si está activo o no el Onboarding." class="ico-help">
                                    <i class="fa fa-question-circle"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Active" />
                            <span asp-validation-for="Active" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>