@model Teed.Plugin.Groceries.Models.ShippingRegion.CreateEditViewModel
@{
    Layout = "_AdminLayout";
    Html.SetActiveMenuItemSystemName("Groceries.ShippingRegion");
}
<style>
    #map {
        height: 600px;
    }
</style>
<form method="post" enctype="multipart/form-data">
    <input type="hidden" value="@Model.Id" />
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Editar región
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">regresar a la lista de regiones</a>
            </small>
        </h1>
        <div class="pull-right">
            <span id="region-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
            <button type="submit" asp-action="Edit" class="btn bg-blue">
                <i class="fa fa-plus-square"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Teed.Plugin.Groceries/Views/ShippingRegion/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="region-delete" />