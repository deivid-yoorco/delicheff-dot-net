                                                {
                                                    foreach (var cost in item.PreviousCostList)
                                                    {
                                                        <small>- @Html.Raw(cost)</small><br />
                                                    }
                                                }
                                                else
                                                {
                                                    <small>No se ha reportado ningún costo anteriormente.</small>
                                                }
                                            </td>
                                            <td style="text-align:left;width:140px">
