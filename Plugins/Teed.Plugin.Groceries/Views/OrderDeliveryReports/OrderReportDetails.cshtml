                            <ul class="images">
                                @foreach (var file in Model.Files)
                                {
                                    <li>
                                        <a href="@(file.FileUrl)" target="_blank">
                                            <img style="width: 150px;height: 200px;" alt="@(file.FileName)" src="@(file.FileUrl)" />
                                        </a>
                                    </li>
                                }
                            </ul>*@
                    </div>
