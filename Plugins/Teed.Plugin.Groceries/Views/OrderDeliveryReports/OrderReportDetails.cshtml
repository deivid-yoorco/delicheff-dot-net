                                                    <td>
                                                        <ul>
                                                            @for (int i = 0; i < item.TicketBuyerFileIds.Count; i++)
                                                            {
                                                                <li>
                                                                    <a class="btn bg-blue" target="_blank" href="/admin/buyerPayment/GetPicture?id=@(item.TicketBuyerFileIds[i])">Ticket @(i + 1)</a>
                                                                </li>
                                                            }
                                                        </ul>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>-</td>
                                                }
