@model Teed.Plugin.Groceries.Models.Franchise.PaymentModel
@{
    Layout = "_AdminLayout";
    Html.SetActiveMenuItemSystemName("Groceries.Payments");
}
<style>
    #map {
        height: 600px;
    }
</style>
<form method="post" enctype="multipart/form-data">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Agregar nuevo pago
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">regresar a la lista de pagos</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" asp-action="Create" class="btn bg-blue">
                <i class="fa fa-plus-square"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <nop-tabs id="categories-price">
                    <nop-tab asp-name="tab-payments" asp-title="Pago" asp-default="true">
                        @await Html.PartialAsync("~/Plugins/Teed.Plugin.Groceries/Views/Payments/_CreateOrUpdate.cshtml", Model)
                    </nop-tab>
                </nop-tabs>
            </div>
        </div>
    </div>
</form>