                <nop-tab asp-name="tab-log" asp-title="Bitácora">@await Html.PartialAsync("~/Plugins/Teed.Plugin.TicketControl/Views/Schedule/_CreateOrUpdate.Log.cshtml", Model)</nop-tab>
