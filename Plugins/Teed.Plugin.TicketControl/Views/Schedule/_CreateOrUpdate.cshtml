<div class="content">
    <div class="form-horizontal">
        <nop-tabs id="product-edit">
            <nop-tab asp-name="tab-info" asp-title="Información principal" asp-default="true">@await Html.PartialAsync("~/Plugins/Teed.Plugin.TicketControl/Views/Schedule/_CreateOrUpdate.Info.cshtml", Model)</nop-tab>
