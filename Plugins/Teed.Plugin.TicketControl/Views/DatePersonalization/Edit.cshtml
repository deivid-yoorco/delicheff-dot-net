@model Teed.Plugin.TicketControl.Models.DatePersonalization.CreateOrEditModel

@{
    Layout = "_AdminLayout";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("TicketControl.DatePersonalization");
}

<form method="post" enctype="multipart/form-data" id="date-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Editar fecha personalizada - @(string.Join(" ", new List<string> { Model.Date.ToString("dd/MM/yyyy") }))
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="Index">regresar a la lista de fechas personalizadas</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="button" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="button" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="datepersonalization-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Teed.Plugin.TicketControl/Views/DatePersonalization/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="datepersonalization-delete" />