@model Teed.Plugin.SaleRecord.Models.SaleRecords.SaleRecordModel
@{
    Layout = "_AdminLayout";
}
<form method="post" enctype="multipart/form-data">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Editar venta
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">regresar a la lista de ventas</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" asp-action="Edit" class="btn bg-blue">
                <i class="fa fa-plus-square"></i>
                @T("Admin.Common.Save")
            </button>
            <span id="billing-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel-body">
                    <nop-tabs id="categories-price">
                        <nop-tab asp-name="tab-bita" asp-title="Editar venta" asp-default="true">
                            @await Html.PartialAsync("~/Plugins/Teed.Plugin.SaleRecord/Views/SaleRecord/_CreateOrUpdate.cshtml", Model)
                        </nop-tab>
                        <nop-tab asp-name="tab-log" asp-title="Bitácora de la venta">
                            <div class="raw clearfix">
                                <div class="col-md-12">
                                    <div class="panel-group">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                Log
                                            </div>
                                            <div class="panel-body">
                                                <pre>@Model.Log</pre>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </nop-tab>
                    </nop-tabs>
                </div>
            </div>
        </div>
    </div>
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="billing-delete" />